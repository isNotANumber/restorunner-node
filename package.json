{
  "name": "restorunner-node",
  "version": "0.0.0",
  "description": "Бэкенд для проекта Restorunner",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "dependencies": {
    "got": "14.2.1",
    "pino": "9.0.0",
    "dotenv": "16.4.5"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "pino-pretty": "11.0.0",
    "rimraf": "5.0.1",
    "json-server": "0.17.3",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "typescript": "5.6.2"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  }
}
