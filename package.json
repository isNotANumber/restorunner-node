{
  "name": "restorunner-node",
  "version": "0.0.0",
  "description": "Бэкенд для проекта Restorunner",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.4.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dotenv": "16.4.5",
    "got": "14.2.1",
    "inversify": "6.0.2",
    "mongoose": "8.3.4",
    "pino": "9.0.0",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "8.16.0",
    "@typescript-eslint/parser": "8.16.0",
    "eslint": "9.15.0",
    "json-server": "0.17.3",
    "pino-pretty": "11.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.16.0"
  },
  "type": "module",
  "engines": {
    "node": "v23.3.0",
    "npm": "10.9.0"
  }
}
